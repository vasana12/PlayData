package score;

import java.util.Scanner;

public class ClassScroe {
	String studentData [][] = new String[100][8];
	int cnt,tot;
	float avg;
	Scanner sc = new Scanner(System.in);
	
	public void input() {
		while(true) {
			
			System.out.println("학번 =>");
			studentData[cnt][0] = sc.nextLine();
			System.out.println("이름 =>");
			studentData[cnt][1] = sc.nextLine();
			System.out.println("국어 =>");
			int kor = sc.nextInt();
			System.out.println("영어 =>");
			int eng = sc.nextInt();
			System.out.println("수학 =>");
			int mat = sc.nextInt();
		
			process(kor,eng,mat);
		
			studentData[cnt][2] = String.valueOf(kor);
			studentData[cnt][3] = String.valueOf(eng);
			studentData[cnt][4] = String.valueOf(mat);
			studentData[cnt][5] = String.valueOf(tot);
			studentData[cnt][6] = String.valueOf(avg);
			
			System.out.println("추가 시 아무키, 없을 시 exit");
			String answer = sc.nextLine();
			if(answer.equals("exit")) {
				break;
			}
			cnt++;
		}
		output();
	}
	private void process(int kor, int eng, int mat) {
		
		this.tot = kor + eng + mat; 
		this.avg = tot/3.f;
		
		int grade = (int)(avg/10);
		
		switch (grade) {
		case 10:
		case 9:
			studentData [cnt][7] = "수";
			break;
		case 8:
			studentData [cnt][7] = "우";
			break;
		case 7:
			studentData [cnt][7] = "미";
			break;
		case 6:
			studentData [cnt][7] = "양";
			break;
		default:
			studentData [cnt][7] = "가";
			break;
		}
	}
	public void output() {
		System.out.println("\n\t\t 성적표");
		System.out.println("===================================");
		System.out.println("학번     이름    국어    영어    수학    총점    평균    등급");
		for(int i =0; i <cnt ; i++) {
			System.out.printf("%4s %4s %4s %4s %4s %4s %4s %4s", studentData [cnt][0],studentData [cnt][1],studentData [cnt][2],studentData [cnt][3],
					studentData [cnt][4],studentData [cnt][5],studentData [cnt][6],studentData [cnt][7]);
			System.out.println("\n");
		}
		System.out.println("===================================");
	}

}
