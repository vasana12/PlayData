import static java.lang.System.out;

public class Loop {

	public static void main(String[] args) {
		
		int cnt =1, holhap = 0, jachap = 0;
		while(cnt <=100) {
			if(cnt % 2==0) {
				jachap += cnt;
				out.printf("짝수  : %d\n",jachap);
			}else {
				holhap += cnt;
				out.printf("홀수 : %d\n",holhap);
			}
			cnt++;
		}
		out.printf("1~100까지 짝수의 합 : %d\n",jachap);
		out.printf("1~100까지 홀수의 합 : %d\n",holhap);
		

	}

}
