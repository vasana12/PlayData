package panel;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JTable;
import javax.swing.JTextField;

public class ModifyClass implements ActionListener{
	JTextField text1, text2, text3, text4, text5;
	JButton button1;
	JTable table;
	String grade;
	InsertClass ic;
	
	ModifyClass(JTable table,JTextField text1,JTextField text2,JTextField text3,JTextField text4,JTextField text5, JButton button1){
		this.table = table;
		this.text1 = text1;
		this.text2 = text2;
		this.text3 = text3;
		this.text4 = text4;
		this.text5 = text5;
		this.button1 = button1;
		ic = new InsertClass(table,text1,text2,text3,text4,text5);
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		for(int i = 0; i < table.getRowCount(); i++) {
			
			if(table.getValueAt(i, 0).equals(text1.getText())) {
				ic.insertM();
				ic.modifyToTable(ic.arr, i);
				text1.setText("");
				text2.setText("");
				text3.setText("");
				text4.setText("");
				text5.setText("");
				return;
			}
		}
			System.out.print("데이터 없음");
			text1.setText("");
			text2.setText("");
			text3.setText("");
			text4.setText("");
			text5.setText("");
			return;
		
	}
}
