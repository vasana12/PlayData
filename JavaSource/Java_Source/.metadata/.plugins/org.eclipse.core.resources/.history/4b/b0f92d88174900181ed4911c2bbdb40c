package panmever2;
import static java.lang.System.out;
import java.util.Scanner;

public class menuclass {
	
	String userOrder="";
	Panme02 pclass = new  Panme02();
	 
	void mainMenu(Panme02 obj[]) {
		breakpoint:
		while(!this.userOrder.equals("3")) {
			obj[Panme02.numberOfData] = new Panme02();
			Scanner sc = new Scanner(System.in);		
			out.println("1 : 데이터 입력, 2 : 출력 , 3 : 종료\n");
			out.println("4 : 데이터 코드 조회, 2 : 출력 , 3 : 종료\n");
			this.userOrder = sc.next();
			
			switch (this.userOrder) {
				case "1":
					pclass.input(sc,obj);
					pclass.process(obj);
					Panme02.numberOfData++;
					break;
				case "2":
					pclass.output(obj,0,Panme02.numberOfData);
					break;
				case "3":
					out.println("***종료***\n");
					break breakpoint;
				case "4":
					select(sc,obj);
					break;
				case "5":
					break;
			}
			
		}
		
	}

}
