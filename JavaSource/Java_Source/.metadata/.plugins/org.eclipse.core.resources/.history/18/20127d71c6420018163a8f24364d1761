import static java.lang.System.out;

public class Loop {

	public static void main(String[] args) {
		
		int cnt =1, odd = 0, even = 0;
		
		while(cnt <= 100) {
			if(cnt % 2 == 0) {
				even += cnt;
			}else {
				odd += cnt;
			}
			cnt++;
		}
		out.printf("1~100까지 짝수의 합 : %d\n",even);
		out.printf("1~100까지 홀수의 합 : %d\n",odd);
	}
}
